<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_infomation_path do |f| %>
  <table>

    <tr>
      <td>氏名</td>
      <td><%= f.text_field :family_name, autofocus: true %>　<%= f.text_field :given_name, autofocus: true %></td>
    </tr>

    <tr>
      <td>カナ</td>
      <td><%= f.text_field :family_name_kana, autofocus: true %>　<%= f.text_field :given_name_kana, autofocus: true %></td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :post_code, autofocus: true %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autofocus: true %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :phone_number, autofocus: true %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email, autofocus: true %></td>
    </tr>

  </table>

  <span><%= f.submit "編集内容を保存" %></span>

  <span><%= link_to "退会する", customers_confirm_path %></span>

<% end %>

<%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>